#!/usr/bin/env ruby

require 'qtools'
require 'optparse'

options = {}
OptionParser.new do |opts|
  opts.banner = "Usage: qwatch [options]"

  opts.on("-a", "--all", "Count jobs for all users") do |n|
    options[:all] = n
  end
end.parse!

flags = []
flags << '-u $USER' unless options[:all]
flags_str = flags.join(' ')
 
puts `qstat #{flags_str} | grep -c ^[0-9]`
